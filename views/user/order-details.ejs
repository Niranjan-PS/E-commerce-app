    // Retry payment function
    async function retryPayment(orderId) {
      if (!orderId) {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Order information not found. Please try again.',
          confirmButtonColor: '#6200ea'
        });
        return;
      }

      try {
        // Show confirmation dialog
        const confirmed = await Swal.fire({
          icon: 'question',
          title: 'Retry Payment',
          text: 'Do you want to retry the payment for this order?',
          showCancelButton: true,
          confirmButtonColor: '#6200ea',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, Retry Payment',
          cancelButtonText: 'Cancel'
        });

        if (!confirmed.isConfirmed) {
          return;
        }

        // Show loading
        Swal.fire({
          title: 'Processing...',
          text: 'Setting up payment gateway...',
          allowOutsideClick: false,
          allowEscapeKey: false,
          showConfirmButton: false,
          didOpen: () => {
            Swal.showLoading();
          }
        });

        // Create new Razorpay order for the existing order
        const response = await fetch('/payment/create-order', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ orderId: orderId })
        });

        const result = await response.json();

        if (!result.success) {
          throw new Error(result.message || 'Failed to create payment order');
        }

        // Close loading dialog
        Swal.close();

        // Configure Razorpay options
        const options = {
          key: result.razorpayKeyId,
          amount: result.razorpayOrder.amount,
          currency: result.razorpayOrder.currency,
          name: 'Luxe Scents',
          description: `Order #${result.order.orderNumber}`,
          order_id: result.razorpayOrder.id,
          prefill: {
            name: result.user.name,
            email: result.user.email,
            contact: result.user.phone
          },
          theme: {
            color: '#6200ea'
          },
          modal: {
            ondismiss: async function() {
              // Payment modal was closed without completing payment
              console.log('Razorpay modal dismissed - marking order as failed');
              
              // Mark order as failed when modal is closed
              await handlePaymentFailure(orderId, {
                code: 'PAYMENT_CANCELLED',
                description: 'Payment was cancelled by user',
                source: 'customer',
                step: 'payment_authentication',
                reason: 'payment_cancelled'
              });
              
              // Show user-friendly message
              Swal.fire({
                icon: 'warning',
                title: 'Payment Cancelled',
                html: `
                  <div class="text-center">
                    <p>Payment was cancelled. Your order payment status has been updated.</p>
                    <div class="mt-3">
                      <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        You can retry payment anytime from the order details page.
                      </small>
                    </div>
                  </div>
                `,
                confirmButtonColor: '#6200ea',
                confirmButtonText: 'Understood'
              }).then(() => {
                // Reload page to show updated order status
                location.reload();
              });
            }
          },
          handler: async function(response) {
            // Payment successful - verify on server
            await verifyPayment(response, orderId);
          }
        };

        // Open Razorpay checkout
        const rzp = new Razorpay(options);
        
        rzp.on('payment.failed', async function(response) {
          // Handle payment failure
          console.log('Razorpay payment failed:', response.error);
          await handlePaymentFailure(orderId, response.error);
        });

        // Track if payment was completed to avoid double failure handling
        let paymentCompleted = false;
        
        // Override the original handler to track completion
        const originalHandler = options.handler;
        options.handler = async function(response) {
          paymentCompleted = true;
          await originalHandler(response);
        };

        // Override the original ondismiss to check if payment was completed
        const originalOnDismiss = options.modal.ondismiss;
        options.modal.ondismiss = async function() {
          if (!paymentCompleted) {
            await originalOnDismiss();
          }
        };

        rzp.open();

      } catch (error) {
        console.error('Error retrying payment:', error);
        Swal.fire({
          icon: 'error',
          title: 'Payment Error',
          text: error.message || 'Failed to initiate payment. Please try again.',
          confirmButtonColor: '#6200ea'
        });
      }
    }

    // Verify payment on server
    async function verifyPayment(razorpayResponse, orderId) {
      try {
        // Show verification loading
        Swal.fire({
          title: 'Verifying Payment...',
          text: 'Please wait while we verify your payment.',
          allowOutsideClick: false,
          allowEscapeKey: false,
          showConfirmButton: false,
          didOpen: () => {
            Swal.showLoading();
          }
        });

        const response = await fetch('/payment/verify', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            razorpay_order_id: razorpayResponse.razorpay_order_id,
            razorpay_payment_id: razorpayResponse.razorpay_payment_id,
            razorpay_signature: razorpayResponse.razorpay_signature,
            orderId: orderId
          })
        });

        const result = await response.json();

        if (result.success) {
          // Payment verified successfully
          Swal.fire({
            icon: 'success',
            title: 'Payment Successful!',
            text: 'Your payment has been processed successfully. Your order is now confirmed.',
            confirmButtonColor: '#6200ea',
            timer: 3000,
            timerProgressBar: true
          }).then(() => {
            // Reload the page to show updated order status
            location.reload();
          });
        } else {
          // Payment verification failed
          Swal.fire({
            icon: 'error',
            title: 'Payment Verification Failed',
            text: 'Payment verification failed. Please contact support if amount was deducted.',
            confirmButtonColor: '#6200ea'
          });
        }

      } catch (error) {
        console.error('Error verifying payment:', error);
        Swal.fire({
          icon: 'error',
          title: 'Verification Error',
          text: 'Payment verification failed. Please contact support if amount was deducted.',
          confirmButtonColor: '#6200ea'
        });
      }
    }

    // Handle payment failure
    async function handlePaymentFailure(orderId, error) {
      try {
        const response = await fetch('/payment/failure', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            orderId: orderId,
            error: error
          })
        });

        const result = await response.json();

        Swal.fire({
          icon: 'error',
          title: 'Payment Failed',
          html: `
            <div class="text-center">
              <p>${error.description || 'Payment was not completed'}</p>
              <div class="mt-3">
                <small class="text-muted">
                  <i class="fas fa-info-circle me-1"></i>
                  You can retry payment anytime from this page.
                </small>
              </div>
            </div>
          `,
          confirmButtonColor: '#6200ea'
        });

      } catch (err) {
        console.error('Error handling payment failure:', err);
        Swal.fire({
          icon: 'error',
          title: 'Payment Failed',
          text: error.description || 'Payment was not completed. You can retry payment anytime.',
          confirmButtonColor: '#6200ea'
        });
      }
    }

