<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Referral Dashboard - Luxe Scents</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <style>
    :root {
      --primary-color: #6200ea;
      --secondary-color: #f8f9fa;
      --success-color: #28a745;
      --danger-color: #dc3545;
      --warning-color: #ffc107;
      --info-color: #17a2b8;
      --dark-color: #343a40;
      --light-color: #f8f9fa;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f9fa;
      color: var(--dark-color);
    }

    .navbar {
      background-color: rgba(0, 0, 0, 0.9);
      padding: 1rem 2rem;
      border-bottom: 1px solid #090909;
      backdrop-filter: blur(10px);
    }
    .navbar-brand {
      font-weight: 700;
      font-size: 1.8rem;
      color: #ffffff !important;
      letter-spacing: 1px;
    }
    .navbar-brand:hover {
      color: #bb86fc !important;
    }
    .nav-link {
      color: #e0e0e0 !important;
      font-weight: 500;
      margin: 0 1rem;
      transition: color 0.3s;
    }
    .nav-link:hover {
      color: #bb86fc !important;
    }
    .navbar-icons {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }
    .navbar-icons a {
      color: #e0e0e0;
      font-size: 1.2rem;
      position: relative;
      transition: color 0.3s;
    }
    .navbar-icons a:hover {
      color: #bb86fc;
    }
    .badge {
      position: absolute;
      top: -8px;
      right: -8px;
      background-color: #6200ea;
      color: #ffffff;
      font-size: 0.7rem;
      border-radius: 50%;
      padding: 2px 6px;
    }
    .dropdown-menu {
      background-color: #2a2a2a;
      border: 1px solid #444;
    }
    .dropdown-item {
      color: #e0e0e0 !important;
      transition: background-color 0.3s, color 0.3s;
    }
    .dropdown-item:hover {
      background-color: #6200ea;
      color: #ffffff !important;
    }

    .referral-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 0 1rem;
    }

    .page-header {
      background: linear-gradient(135deg, var(--primary-color), #7c4dff);
      color: white;
      border-radius: 15px;
      padding: 2rem;
      margin-bottom: 2rem;
      text-align: center;
    }

    .page-title {
      font-size: 2.5rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    .page-subtitle {
      font-size: 1.1rem;
      opacity: 0.9;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-bottom: 2rem;
    }

    .stat-card {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
      text-align: center;
      transition: transform 0.3s ease;
    }

    .stat-card:hover {
      transform: translateY(-5px);
    }

    .stat-icon {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 1rem;
      font-size: 1.5rem;
      color: white;
    }

    .stat-icon.referrals {
      background: linear-gradient(135deg, #28a745, #20c997);
    }

    .stat-icon.earnings {
      background: linear-gradient(135deg, #ffc107, #fd7e14);
    }

    .stat-icon.recent {
      background: linear-gradient(135deg, #17a2b8, #6f42c1);
    }

    .stat-value {
      font-size: 2rem;
      font-weight: 700;
      color: var(--primary-color);
      margin-bottom: 0.5rem;
    }

    .stat-label {
      color: #6c757d;
      font-weight: 500;
    }

    .referral-codes {
      background: white;
      border-radius: 15px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .section-title {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--dark-color);
      margin-bottom: 1.5rem;
      border-bottom: 2px solid var(--primary-color);
      padding-bottom: 0.5rem;
    }

    .code-item {
      background: #f8f9fa;
      border-radius: 10px;
      padding: 1rem;
      margin-bottom: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .code-label {
      font-weight: 600;
      color: var(--dark-color);
    }

    .code-value {
      font-family: 'Courier New', monospace;
      background: white;
      padding: 0.5rem 1rem;
      border-radius: 5px;
      border: 1px solid #dee2e6;
      font-weight: 600;
      color: var(--primary-color);
    }

    .copy-btn {
      background: var(--primary-color);
      color: white;
      border: none;
      border-radius: 5px;
      padding: 0.5rem 1rem;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .copy-btn:hover {
      background: #5000d0;
    }

    .share-section {
      background: white;
      border-radius: 15px;
      padding: 2rem;
      margin-bottom: 2rem;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .share-buttons {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      margin-top: 1rem;
    }

    .share-btn {
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 25px;
      font-weight: 600;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 0.5rem;
      transition: all 0.3s ease;
    }

    .share-btn.whatsapp {
      background: #25d366;
      color: white;
    }

    .share-btn.telegram {
      background: #0088cc;
      color: white;
    }

    .share-btn.copy {
      background: var(--primary-color);
      color: white;
    }

    .share-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
      color: white;
    }

    .recent-referrals {
      background: white;
      border-radius: 15px;
      padding: 2rem;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .referral-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem;
      border-bottom: 1px solid #e9ecef;
    }

    .referral-item:last-child {
      border-bottom: none;
    }

    .referral-info {
      flex: 1;
    }

    .referral-name {
      font-weight: 600;
      color: var(--dark-color);
    }

    .referral-date {
      color: #6c757d;
      font-size: 0.9rem;
    }

    .referral-reward {
      font-weight: 700;
      color: var(--success-color);
    }

    .empty-state {
      text-align: center;
      padding: 2rem;
      color: #6c757d;
    }

    .empty-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .referral-container {
        margin: 1rem;
        padding: 0;
      }

      .page-header,
      .referral-codes,
      .share-section,
      .recent-referrals {
        margin: 1rem;
        padding: 1.5rem;
      }

      .page-title {
        font-size: 2rem;
      }

      .stats-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
      }

      .code-item {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
      }

      .share-buttons {
        justify-content: center;
      }

      .referral-item {
        flex-direction: column;
        text-align: center;
        gap: 0.5rem;
      }
    }
  </style>
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">LUXE SCENTS</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/shop">Shop</a>
          </li>
        </ul>
        <div class="navbar-icons">
          <a href="/wishlist" class="text-white me-3">
            <i class="fas fa-heart"></i>
            <span class="badge bg-danger" id="wishlistCount">0</span>
          </a>
          <a href="/cart" class="text-white me-3">
            <i class="fas fa-shopping-cart"></i>
            <span class="badge bg-danger" id="cartCount">0</span>
          </a>
          <div class="dropdown">
            <a href="#" class="dropdown-toggle text-white" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-user-circle"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/profile">My Profile</a></li>
              <li><a class="dropdown-item" href="/orders">My Orders</a></li>
              <li><a class="dropdown-item" href="/wallet">My Wallet</a></li>
              <li><a class="dropdown-item" href="/referrals">Referrals</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div class="referral-container">
    <!-- Page Header -->
    <div class="page-header">
      <h1 class="page-title">Referral Dashboard</h1>
      <p class="page-subtitle">Invite friends and earn rewards together!</p>
    </div>

    <!-- Statistics -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon referrals">
          <i class="fas fa-users"></i>
        </div>
        <div class="stat-value"><%= referralInfo ? referralInfo.stats.totalReferrals : 0 %></div>
        <div class="stat-label">Total Referrals</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon earnings">
          <i class="fas fa-coins"></i>
        </div>
        <div class="stat-value">â‚¹<%= referralInfo ? referralInfo.stats.totalEarnings : 0 %></div>
        <div class="stat-label">Total Earnings</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon recent">
          <i class="fas fa-calendar-week"></i>
        </div>
        <div class="stat-value"><%= referralInfo ? referralInfo.stats.recentReferrals : 0 %></div>
        <div class="stat-label">This Month</div>
      </div>
    </div>

    <!-- Referral Codes -->
    <div class="referral-codes">
      <h2 class="section-title">Your Referral Codes</h2>
      
      <% if (referralInfo) { %>
        <div class="code-item">
          <div>
            <div class="code-label">Referral Code</div>
            <small class="text-muted">Share this code with friends</small>
          </div>
          <div class="d-flex align-items-center gap-2">
            <span class="code-value" id="referralCode"><%= referralInfo.referralCode %></span>
            <button class="copy-btn" onclick="copyToClipboard('referralCode')">
              <i class="fas fa-copy"></i>
            </button>
          </div>
        </div>

        <div class="code-item">
          <div>
            <div class="code-label">Referral Link</div>
            <small class="text-muted">Direct registration link</small>
          </div>
          <div class="d-flex align-items-center gap-2">
            <span class="code-value" id="referralUrl" style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">
              <%= referralInfo.referralUrl %>
            </span>
            <button class="copy-btn" onclick="copyToClipboard('referralUrl')">
              <i class="fas fa-copy"></i>
            </button>
          </div>
        </div>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-icon">
            <i class="fas fa-exclamation-triangle"></i>
          </div>
          <p>Referral information not available. Please contact support.</p>
        </div>
      <% } %>
    </div>

    <!-- Share Section -->
    <% if (referralInfo) { %>
      <div class="share-section">
        <h2 class="section-title">Share & Earn</h2>
        <p class="mb-3">Share your referral link and earn â‚¹100 for each friend who joins. They get â‚¹50 too!</p>
        
        <div class="share-buttons">
          <a href="#" class="share-btn whatsapp" onclick="shareOnWhatsApp()">
            <i class="fab fa-whatsapp"></i>
            WhatsApp
          </a>
          <a href="#" class="share-btn telegram" onclick="shareOnTelegram()">
            <i class="fab fa-telegram"></i>
            Telegram
          </a>
          <button class="share-btn copy" onclick="copyReferralLink()">
            <i class="fas fa-link"></i>
            Copy Link
          </button>
        </div>
      </div>
    <% } %>

    <!-- Recent Referrals -->
    <div class="recent-referrals">
      <h2 class="section-title">Recent Referrals</h2>
      
      <% if (referralInfo && referralInfo.recentReferrals && referralInfo.recentReferrals.length > 0) { %>
        <% referralInfo.recentReferrals.forEach(referral => { %>
          <div class="referral-item">
            <div class="referral-info">
              <div class="referral-name"><%= referral.name %></div>
              <div class="referral-date">
                Joined on <%= new Date(referral.date).toLocaleDateString('en-IN', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                }) %>
              </div>
            </div>
            <div class="referral-reward">+â‚¹<%= referral.reward %></div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="empty-state">
          <div class="empty-icon">
            <i class="fas fa-user-friends"></i>
          </div>
          <p>No referrals yet. Start sharing your code to earn rewards!</p>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Copy to clipboard function
    function copyToClipboard(elementId) {
      const element = document.getElementById(elementId);
      const text = element.textContent;
      
      navigator.clipboard.writeText(text).then(() => {
        Swal.fire({
          icon: 'success',
          title: 'Copied!',
          text: 'Copied to clipboard',
          timer: 1500,
          showConfirmButton: false
        });
      }).catch(() => {
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = text;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        
        Swal.fire({
          icon: 'success',
          title: 'Copied!',
          text: 'Copied to clipboard',
          timer: 1500,
          showConfirmButton: false
        });
      });
    }

    // Copy referral link
    function copyReferralLink() {
      copyToClipboard('referralUrl');
    }

    // Share on WhatsApp
    function shareOnWhatsApp() {
      const referralUrl = document.getElementById('referralUrl').textContent;
      const message = `ðŸŽ‰ Join Luxe Scents and get â‚¹50 bonus! Use my referral link: ${referralUrl}`;
      const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(message)}`;
      window.open(whatsappUrl, '_blank');
    }

    // Share on Telegram
    function shareOnTelegram() {
      const referralUrl = document.getElementById('referralUrl').textContent;
      const message = `ðŸŽ‰ Join Luxe Scents and get â‚¹50 bonus! Use my referral link: ${referralUrl}`;
      const telegramUrl = `https://t.me/share/url?url=${encodeURIComponent(referralUrl)}&text=${encodeURIComponent(message)}`;
      window.open(telegramUrl, '_blank');
    }

    // Update cart and wishlist counts
    function updateCounts() {
      fetch('/api/cart/count')
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            const cartBadge = document.getElementById('cartCount');
            if (cartBadge) {
              cartBadge.textContent = data.cartCount;
            }
          }
        })
        .catch(error => {
          console.error('Error updating cart count:', error);
        });

      fetch('/api/wishlist/count')
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            const wishlistBadge = document.getElementById('wishlistCount');
            if (wishlistBadge) {
              wishlistBadge.textContent = data.wishlistCount;
            }
          }
        })
        .catch(error => {
          console.error('Error updating wishlist count:', error);
        });
    }

    // Initialize counts on page load
    document.addEventListener('DOMContentLoaded', function() {
      updateCounts();
    });
  </script>
</body>
</html>